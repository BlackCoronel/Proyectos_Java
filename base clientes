package dialogos;

import javax.swing.JOptionPane;

public class prueba {

	public static void main(String[] args) {
		
		int clientes=0;
		int i;
		
		for(i=0; clientes<=3; i++){

		String nombre=JOptionPane.showInputDialog("Introduce tu nombre");
		String apellidos=JOptionPane.showInputDialog("Introduce tus apellidos");
		String DNI=JOptionPane.showInputDialog("Introduce tu DNI con letra");
		
		
		JOptionPane.showMessageDialog(null, "nombre registrado con exito "+nombre);
		JOptionPane.showMessageDialog(null,"apellidos registrados con exito "+apellidos);
		JOptionPane.showMessageDialog(null, "DNI registrado con exito "+DNI);
		
		
		System.out.println("_-_-_-_-_DATOS CLIENTE_-_-_-_-_");
		System.out.println("Nombre:"+nombre);
		System.out.println("Apellidos:"+apellidos);
		System.out.println("DNI:"+DNI);
		
		clientes++;
		
		}
	}

}
